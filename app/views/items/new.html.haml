= form_with model: @item, local: true, class: 'form' do |form| 
  = form.text_field :name, placeholder: "name", class: 'name'
  .image-box
    = form.fields_for :images do |i|
      = i.file_field :image, class: 'js-file'

  = form.text_field :price, placeholder: "price", class: 'price'
  = form.text_area :item_text, placeholder: "商品の説明", class: 'item_text'
  = form.collection_select :address, Prefecture.all, :id, :name
  = form.text_field :date, placeholder: "date", class: 'date'
  = form.text_field :brand, placeholder: "ブランド", class: 'brand'
  = form.text_field :status, placeholder: "状態", class: 'status'
  = form.text_field :delivery_charge, placeholder: "配送料", class: 'charge'
  = form.text_field :size, placeholder: "サイズ", class: 'size'
  = form.submit "出品", class: 'send'