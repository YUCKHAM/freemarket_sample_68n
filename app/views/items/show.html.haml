.detail
  .detail-header
    .header
  .header__top
    .header__top__logo
      = link_to items_path do
        = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2334484240', alt: 'mercari', height: '36', width: '134', class: 'header-top__image'
    = form_tag('/search', method: :get, class: "search-form") do
      %input{type: "search", placeholder: "何かお探しですか？", name: "search", class: "search-field"}
      %button{type: "submit", name: "name", class: "search-button"}
        %span.fas.fa-search
  .header__nav-box
    %span.header__nav-box__left
      %span.header__nav-box__left__category
        = link_to 'カテゴリーから探す', '#'
      %span.header__nav-box__left__brand
        = link_to 'ブランドから探す', '#'
    %span.header__nav-box__right
      %span.header__nav-box__right__likes
        = link_to 'いいね!一覧', '#'
      %span.header__nav-box__right__notice
        = link_to 'お知らせ', '#'
      %span.header__nav-box__right__todo
        = link_to 'やることリスト', '#'
      %span.header__nav-box__right__mypage
        = image_tag 'https://static.mercdn.net/images/member_photo_noimage_thumb.png', height: '30', width: '30', class: 'user-icon'
        = link_to 'マイページ'
        = link_to '新規会員登録', class: "header__nav-box__right__sign-up"
        = link_to 'ログイン', class: "header__nav-box__right__sign-in"

  .detail-container
    %h1.container__header
      item.name
    .container
      .container__left__contents
        .container__left__contents__image-large
          image_tag
        .container__left__contents__image-small
      %table.container__right__contents
        %tbody.container__right__contents__table
          %tr
            %th 出品者
            %td
              user.nickname
              .review
                %span.good 10
                %span.normal 10
                %span.bad 10
          %tr
            %th カテゴリー
            %td
              item_category
          %tr
            %th ブランド
            %td item.brand_id
          %tr
            %th 商品のサイズ
            %td item.size
          %tr
            %th 商品の状態
            %td
              item.condition.name
          %tr
            %th 配送料の負担(出品者負担)
            %td
              らくらくメルカリ便
          %tr
            %th 配送の方法
            %td 手渡し
          %tr
            %th 配送元地域
            %td
              area.name
          %tr
            %th 発送日の目安
            %td
              date
    .container__price
      %span.price
        item
      %span.item-tax (税込)
      %span.shipping-fee
        item
    .container__purchace
      = link_to '購入画面へ進む', class: 'container__purchace-button'
      = link_to '購入画面へ進む', class: 'container__purchace-button'
    .container__description
      item
    .container__buttons
      .container__buttons__left
        = button_tag type: 'button', class: 'button-like' do
          %span.like-icon いいね!
          %span 0
        = button_tag type: 'button', class: 'report' do
          %span 不適切な商品の報告
      = link_to '#', class: 'contaqiner__buttons__right' do
        %span.fas.fa-lock
        %span あんしん・あんぜんへの取り組み
  .status-change-btn
    .status-change-btn__edit
      =link_to '商品の編集'
    %p or
    .status-change-btn__stop
      = link_to '出品を一旦停止する', '#'
    .status-change-btn__delete
      = link_to 'この商品を削除する'
  .comment
    %p.comment__caution 相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
    = form_tag '/', method: :get, class: 'comment__form' do
      = text_area_tag "comment__form__body"
      = submit_tag "コメントする", class: 'comment__form__submit'
    
  .prev-next-page
    .prev-page
      = link_to '#' do
        %span.fas.fa-chevron-left
        %span 前の商品
    .next-page
      = link_to '#' do
        %span 次の商品
        %span.fas.fa-chevron-right


  .sns
    = link_to '#', class: 'sns__link' do
      %span.fab.fa-facebook-square
    = link_to '#', class: 'sns__link' do
      %span.fab.fa-twitter-square
    = link_to '#', class: 'sns__link' do
      %span.fab.fa-pinterest-square
  .detail-footer
    breadcrumb
    breadcrumbs